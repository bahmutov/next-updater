{
  // this is JSON file, but ESLint allows C-style comments

  "env": {
    "browser": true,
    "node": false
  },

  // 0 - turn rule off
  // 1 - rule generates warnings
  // 2 - rule generates errors
  "rules": {
    "camelcase": 0,
    "camel_case": 0,
    "strict": 0,
    "no-undef": 1,
    "no-console": 0,
    "no-unused-vars": 1,
    "no-underscore-dangle": 1,
    "quotes": [2, "single"],
    "brace-style": [2, "1tbs"],
    "eol-last": 1,
    "semi": [2, "always"],
    "no-extra-strict": 0,
    "no-single-line-objects": 2,
    "no-nested-ternary": 2,
    "no-space-before-semi": 2,
    "no-shadow": 2,
    "no-undef-init": 2,
    "no-undefined": 0,
    "no-sequences": 2,
    "no-for-loops": 2,
    "no-process-exit": 0
  },

  "globals": {
    "navigator": true,
    "console": true,
    "Promise": true
  }
}
